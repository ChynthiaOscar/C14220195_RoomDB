<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/tvItem"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="Item Barang"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvTanggal"
        app:layout_constraintTop_toBottomOf="@id/tvTanggal"/>

    <TextView
        android:id="@+id/tvJumlah"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Jumlah Barang"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvItem"
        app:layout_constraintTop_toBottomOf="@id/tvItem"/>

    <ImageButton
        android:id="@+id/btnHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_close_24"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_edit_note_24"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/btnHapus"
        app:layout_constraintTop_toTopOf="@id/btnHapus"
        app:layout_constraintBottom_toBottomOf="@id/btnHapus"/>

</androidx.constraintlayout.widget.ConstraintLayout>